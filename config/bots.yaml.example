# Bot configurations - copy to bots.yaml and replace with your account credentials.
# Do not commit bots.yaml (it contains passwords).
bots:
  - id: miner_001
    account: my_miner
    username: my_username
    password: your_password_here
    script: MiningBot
    args: ["iron", "al_kharid", "powermine"]
    auto_restart: false   # no automatic restart on crash; set true only if you want manual "recover" to restart this bot
    max_runtime: 4

  - id: fisher_001
    account: my_fisher
    username: my_username2
    password: your_password_here
    script: FishingBot
    args: ["lobster", "karamja"]
    auto_restart: false
